<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_helloworld"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability__01_lifecycle"
        ohos:layout_alignment="horizontal_center"
        ohos:text="第一个Slice"
        ohos:text_size="40fp"
        />

    <Button
        ohos:id="$+id:btn_toslice"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="跳转下一个Slice"
        ohos:text_size="40fp"/>

    <Button
        ohos:id="$+id:btn_topage"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="跳转下一个Page"
        ohos:text_size="40fp"/>

    <Button
        ohos:id="$+id:btn_pass_value"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="传值"
        ohos:text_size="40fp"/>

    <Button
        ohos:id="$+id:btn_pass_return_value"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="传值并返回:"
        ohos:text_size="40fp"/>
    <Text
        ohos:id="$+id:tv_result"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="返回的值："
        ohos:text_size="40fp"/>
    <Button
        ohos:id="$+id:btn_to_other_slice"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="跳转到其他的Slice"
        ohos:text_size="40fp"/>


</DirectionalLayout>