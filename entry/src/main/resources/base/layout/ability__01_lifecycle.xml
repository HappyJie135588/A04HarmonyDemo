<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_helloworld"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability__01_lifecycle"
        ohos:layout_alignment="horizontal_center"
        ohos:text="第一个Slice"
        ohos:text_size="40fp"
        />

    <Button
        ohos:id="$+id:btn_toslice"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="跳转下一个Slice"
        ohos:text_size="40fp"/>

    <Button
        ohos:id="$+id:btn_topage"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text="跳转下一个Page"
        ohos:text_size="40fp"/>

</DirectionalLayout>